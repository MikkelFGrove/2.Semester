<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="AnchorPane" prefHeight="325.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.FXMLController">
   <children>
      <VBox layoutY="-1.0" prefHeight="325.0" prefWidth="500.0">
         <children>
            <HBox prefHeight="70.0" prefWidth="460.0">
               <children>
                  <Pane prefHeight="200.0" prefWidth="200.0">
                     <children>
                        <Label prefHeight="0.0" prefWidth="50.0" text="Search" />
                        <TextField fx:id="searchTextField" layoutY="23.0" />
                     </children>
                  </Pane>
                  <Pane prefHeight="200.0" prefWidth="200.0">
                     <children>
                        <Label prefHeight="0.0" prefWidth="50.0" text="Replace" />
                        <TextField fx:id="replaceTextField" layoutY="23.0" />
                     </children>
                  </Pane>
                  <Pane prefHeight="100.0" prefWidth="82.0">
                     <children>
                        <Button fx:id="replaceAllButton" layoutY="25.0" mnemonicParsing="false" onAction="#replaceButtonHandler" text="Replace All" />
                     </children>
                  </Pane>
               </children>
            </HBox>
            <TextArea fx:id="textArea" prefHeight="215.0" prefWidth="460.0" />
            <HBox prefHeight="44.0" prefWidth="460.0">
               <children>
                  <Button fx:id="openFileButton" mnemonicParsing="false" onAction="#openFileButtonHandler" text="Open File">
                     <HBox.margin>
                        <Insets left="50.0" top="10.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="saveAsButton" mnemonicParsing="false" onAction="#saveAsButtonHandler" text="Save As">
                     <HBox.margin>
                        <Insets left="50.0" top="10.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>
