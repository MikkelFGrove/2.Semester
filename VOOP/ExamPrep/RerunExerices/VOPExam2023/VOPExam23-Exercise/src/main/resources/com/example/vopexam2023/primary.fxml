<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="688.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/21" fx:controller="com.example.vopexam2023.PrimaryController">
   <children>
      <HBox prefHeight="400.0" prefWidth="689.0">
         <children>
            <VBox alignment="CENTER" prefHeight="400.0" prefWidth="352.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#showCountries" text="Button" />
                  <ListView fx:id="lsCountries" prefHeight="303.0" onMouseClicked="#showTourInfo" prefWidth="352.0" />
               </children>
            </VBox>
            <VBox alignment="CENTER" prefHeight="400.0" prefWidth="338.0">
               <children>
                  <Label text="Tourism Information" />
                  <TextArea fx:id="txtTourInfo" prefHeight="200.0" prefWidth="200.0" />
                  <Button mnemonicParsing="false" onAction="#clearAction" text="Clear" />
               </children>
            </VBox>
         </children>
      </HBox>
   </children>
</AnchorPane>
